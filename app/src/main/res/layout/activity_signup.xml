<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="16dp"
    android:layout_height="match_parent"
    tools:context="com.test.koolkidsklub.SignupActivity">

    <EditText
        android:id="@+id/enter_name"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:paddingTop="30dp"
        android:layout_height="wrap_content"
        android:hint="Enter you name"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/enter_email"
        android:layout_margin="10dp"
        android:layout_below="@+id/enter_name"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:hint="Enter your email id"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/enter_pass"
        android:layout_margin="10dp"
        android:layout_below="@+id/enter_email"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:hint="Enter your password"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/enter_phone"
        android:layout_margin="10dp"
        android:layout_below="@+id/enter_pass"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:hint="Enter your phone number"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/enter_lat"
        android:layout_margin="10dp"
        android:layout_below="@+id/enter_phone"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:hint="Enter your latitude"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/enter_long"
        android:layout_margin="10dp"
        android:layout_below="@+id/enter_lat"
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:hint="Enter your longitude"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/sign_up_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign up"
        android:layout_below="@id/enter_long"
        android:layout_centerInParent="true"
        android:layout_margin="40dp"
        android:textSize="30sp"
        android:textStyle="bold"
        />

</RelativeLayout>